{
    "meta" : {
        "label" : "Node pool",
        "pluralLabel" : "Node pools",
        "description" : "Configuration for an AKS node pool",
        "icon" : "icon-tasks"
    },
    
    "overridable" : false,
    "inlinable" : true,
    
    "pluginParams": [
    ],

    "params": [
        {
            "name": "vmSize",
            "label": "Machine type",
            "description": "Azure VM size for the nodes. See Azure documentation for available VM sizes.",
            "type": "STRING",
            "mandatory" : true,
            "defaultValue" : "Standard_B8ms"
        },
        {
            "name": "osDiskSizeGb",
            "label": "Disk size",
            "description": "Disk size for the nodes (leave 0 for the default by machine type)",
            "type": "INT",
            "mandatory" : false
        },
        {
            "name": "numNodes",
            "label": "Default number of nodes",
            "type": "INT",
            "mandatory" : true,
            "defaultValue" : 3
        },
        {
            "name": "autoScaling",
            "label": "Enable nodes autoscaling",
            "type": "BOOLEAN",
            "mandatory" : true,
            "defaultValue" : false
        },
        {
            "name": "minNumNodes",
            "label": "Min number of nodes",
            "type": "INT",
            "mandatory" : true,
            "defaultValue" : 2,
            "visibilityCondition" : "model.autoScaling"
        },
        {
            "name": "maxNumNodes",
            "label": "Max number of nodes",
            "type": "INT",
            "mandatory" : true,
            "defaultValue" : 5,
            "visibilityCondition" : "model.autoScaling"
        },
        {
            "name": "subnet",
            "label" : "VNet Subnet",
            "description" : "Subnet of a VNet to use for the cluster",
            "type": "STRING",
            "mandatory" : true
        },
        {
            "name": "vnet",
            "label" : "Virtual network",
            "description" : "Virtual network of the subnet, if subnet is not a full resource path",
            "type": "STRING",
            "mandatory" : true
        }
    ]
}
